<link name="pole_link">

<visual>
  <origin xyz="0 0 0.1" rpy="0 0 0" />
  <geometry>
    <cylinder radius="0.001" length="0.2"/>
  </geometry>
  <material name="white"/>
</visual>

<collision>
  <origin xyz="0 0 0.1" rpy="0 0 0" />
  <geometry>
    <cylinder radius="0.001" length="0.2"/>
  </geometry>
</collision>

<inertial>
  <mass value="0.001"/>
  <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
</inertial>

</link>


<joint name="pole_mountplate_joint" type="fixed">
  <origin xyz="-0.135 0.065 0" rpy="0 -0.2 0" />
  <parent link="mountplate"/>
  <child link="pole_link" />
</joint>


<link name="flag_link">

      <visual>
      <origin xyz="-0.075 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.15 0.01 0.1"/>
        </geometry>
        <material name="white"/>
      </visual>

    <collision>
      <origin xyz="-0.075 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.15 0.01 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>

</link>


<joint name="flag_pole_joint" type="continuous">
  <axis xyz="0 0 1"/>
  <origin xyz="0 0 0.2" rpy="0 0 0" />
  <parent link="pole_link"/>
  <child link="flag_link" />
</joint>



</robot>
